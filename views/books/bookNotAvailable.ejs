<% layout("/layouts/boilerplate") -%>


    <link rel="stylesheet" href="/css/styles.css" />
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
        color: #343a40;
        display: flex;
        flex-direction: column;

        align-items: center;
        height: 100vh;
        margin: 0;
        text-align: center;
      }

      h1 {
        font-size: 2.5em;
        margin-bottom: 20px;
        padding: 1rem;
        color: #dc3545;
      }

      p {
        font-size: 1.2em;
        margin-bottom: 30px;
      }

      .button {
        display: inline-block;
        background-color: rebeccapurple;
        color: white;
        padding: 10px 20px;
        font-size: 1.1em;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s, transform 0.2s;
      }

      .button:hover {
        background-color: #7a2c91;
        transform: translateY(-2px);
      }
    </style>

  <body>
    <h1>Book Not Available</h1>
    <p>We're sorry, but this book is currently not available.</p>
    <a class="button" href="/books">Back to Book List</a>
  </body>

