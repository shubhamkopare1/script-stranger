<% layout('/layouts/boilerplate') %>
<style>
  .issue {
    margin-top: 5rem !important;
  }
  .bg {
    border: 1px solid rgb(45, 45, 45);
    transition: none !important;
  }
  .bg::placeholder {
    color: black;
  }
  .bg:focus {
    transition: none !important;
    box-shadow: 0 0 1px 1px rebeccapurple;
    border: 1px solid rebeccapurple;
  }
</style>

<body>
  <div class="row mt-3 issue">
    <div class="col-8 offset-2">
      <h1>Book Issue</h1>
      <form
        action="/books/issue/<%= id %>"
        method="post"
        novalidate
        class="needs-validation"
      >
        <div class="mb-3">
          <input
            type="text"
            name="title"
            placeholder="Enter Your Name"
            class="form-control bg"
            required
          />
        </div>

        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Student ID</label>
            <input
              type="text"
              name="studentId"
              placeholder="Enter Student Id"
              class="form-control bg"
              required
            />
            <div class="invalid-feedback">Student ID is required</div>
          </div>
          <div class="mb-3 col-md-8">
            <label for="course" class="form-label">Course Name</label>
            <input
              type="text"
              name="course"
              placeholder="Enter Course Name"
              class="form-control bg"
              required
            />
            <div class="invalid-feedback">Course name is required</div>
          </div>
        </div>
        <div class="mb-3">
          <label for="book" class="form-label">Book Name</label>
          <input
            type="text"
            name="book"
            value="<%= book.title %>"
            class="form-control bg"
            readonly
            required
          />
          <div class="invalid-feedback">Book name is required</div>
        </div>

        <div class="mb-3">
          <label for="contact" class="form-label">Enter Mobile-Number</label>
          <input
            type="number"
            name="contact"
            placeholder="Enter a number "
            class="form-control bg"
            required
          />
          <div class="invalid-feedback">must be a number</div>
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Enter Email</label>
          <input
            type="email"
            name="email"
            placeholder="Enter your email"
            class="form-control bg"
            required
          />
          <div class="invalid-feedback">Must be a valid email</div>
        </div>
        <% if (book.books > 0) { %>
        <button type="submit" class="btn btn-dark mt-3">IssueBook</button>
        <% } %>
      </form>
    </div>
  </div>
</body>
